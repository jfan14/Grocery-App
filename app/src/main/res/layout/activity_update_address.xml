<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/app_bar"/>

    <TextView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update your Address Information"
        android:gravity="center"
        android:textSize="26dp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:textColor="@color/deeper_green"/>

    <EditText

        android:id="@+id/edit_text_house_number_edit"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="House Number"
        android:textColorHint="@color/white"
        android:background="@drawable/button_design"
        android:textSize="20dp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/deeper_green"/>

    <EditText
        android:id="@+id/edit_text_street_name_edit"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Street Name"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/button_design"
        android:textSize="20dp"
        android:padding="10dp"
        android:backgroundTint="@color/deeper_green"/>

    <EditText
        android:id="@+id/edit_text_type_edit"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/button_design"
        android:textSize="20dp"
        android:padding="10dp"
        android:backgroundTint="@color/deeper_green"/>

    <EditText
        android:id="@+id/edit_text_city_edit"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="City"
        android:textColorHint="@color/white"
        android:background="@drawable/button_design"
        android:textSize="20dp"
        android:padding="10dp"
        android:backgroundTint="@color/deeper_green"/>

    <EditText
        android:id="@+id/edit_text_pincode_edit"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pincode"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/button_design"
        android:textSize="20dp"
        android:padding="10dp"
        android:backgroundTint="@color/deeper_green"/>

    <Button
        android:layout_marginTop="16dp"
        android:id="@+id/button_add_address_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Submit"
        android:textSize="20dp"
        android:background="@drawable/button_design"
        android:backgroundTint="@color/deeper_green"
        android:textColor="@color/white"
        android:padding="16dp"/>

</LinearLayout>