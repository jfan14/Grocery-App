<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deeper_green"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Date"
            android:textColor="@color/deeper_green" />

        <TextView
            android:id="@+id/text_view_date_order_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is the Date"
            android:textColor="@color/deeper_green"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Method"
            android:textColor="@color/deeper_green" />

        <TextView
            android:id="@+id/text_view_status_order_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is the Status"
            android:textColor="@color/deeper_green"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bill Email Address"
            android:textColor="@color/deeper_green" />

        <TextView
            android:id="@+id/text_view_bill_order_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is the bill to"
            android:textColor="@color/deeper_green"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery Address"
            android:textColor="@color/deeper_green" />

        <TextView
            android:id="@+id/text_view_address_order_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is the Address"
            android:textColor="@color/deeper_green"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Summary"
            android:textColor="@color/deeper_green" />

        <TextView
            android:id="@+id/subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view"
            android:layout_marginTop="16dp"
            android:text="SubTotal"
            android:textColor="@color/deeper_green" />

        <TextView
            android:id="@+id/discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subtotal"
            android:text="Discount"
            android:textColor="@color/deeper_green" />

        <TextView
            android:id="@+id/delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/discount"
            android:text="Delivery Fee"
            android:textColor="@color/deeper_green" />

        <TextView
            android:id="@+id/order_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/delivery"
            android:text="Order Amount"
            android:textColor="@color/deeper_green"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subtotal_order_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:text="Display SubTotal"
            android:textColor="@color/deeper_green" />

        <TextView
            android:id="@+id/discount_order_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subtotal_order_display"
            android:layout_alignParentRight="true"
            android:text="Display Discount"
            android:textColor="@color/deeper_green" />

        <TextView
            android:id="@+id/deliver_order_displayy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/discount_order_display"
            android:layout_alignParentRight="true"
            android:text="Display Delivery Fee"
            android:textColor="@color/deeper_green" />

        <TextView
            android:id="@+id/order_amount_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/delivery"
            android:layout_alignParentRight="true"
            android:text="Display Order Amount"
            android:textColor="@color/deeper_green"
            android:textSize="16dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/prescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prescriptions"
            android:textColor="@color/deeper_green" />

        <TextView
            android:layout_below="@+id/prescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/deeper_green"
            android:text="No Prescription Found"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button_design"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:backgroundTint="@color/deeper_green"
            android:text="Need Help?"/>
    </RelativeLayout>

</LinearLayout>