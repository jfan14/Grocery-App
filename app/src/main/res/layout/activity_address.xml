<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/app_bar"/>

    <Button
        android:layout_below="@+id/tool_bar"
        android:layout_marginTop="16dp"
        android:id="@+id/button_add_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_design"
        android:backgroundTint="@color/deeper_green"
        android:padding="16dp"
        android:text="Add a new Address"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:paddingTop="16dp"
        android:layout_below="@+id/button_add_address"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_use_adress"
        android:id="@+id/recycler_view_address"/>

    <Button
        android:id="@+id/button_use_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_design"
        android:backgroundTint="@color/deeper_green"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:text="Use this address"/>


</RelativeLayout>